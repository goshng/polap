  doi       = {10.48550/arXiv.1308.2012},
  file      = {:Liu2020--Estimation of Genomic Characteristics by Analyzing K Mer Frequency in De Novo Genome Projects.pdf:PDF},
  keywords  = {Quantitative Biology - Genomics},
